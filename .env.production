# Production Environment Configuration
# Copy this file to .env and update values for production

# Rentman API Configuration
RENTMAN_TOKEN=your-production-token-here
RENTMAN_BASE_URL=https://www.rentman.online
RENTMAN_TIMEOUT=30000
RENTMAN_RETRIES=3

# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=production

# Image Processing
IMAGE_QUALITY=85
IMAGE_QUALITY_THUMB=80
IMAGE_QUALITY_MEDIUM=85
IMAGE_QUALITY_LARGE=90
IMAGE_CACHE_TTL=86400
IMAGE_CACHE_DIR=./public/images
IMAGE_MAX_FILE_SIZE=10485760
CDN_URL=

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Logging
LOG_LEVEL=warn
LOG_FORMAT=combined
LOG_FILE=logs/app.log

